<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.reynagagroup.ryelloshopping">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE"/>


    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon2_round"
        android:label="@string/app_name"
        android:logo="@mipmap/icon2"
        android:roundIcon="@mipmap/icon2_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ViewAllActivity"
            android:theme="@style/Home"
            ></activity>
        <activity
            android:name=".MyAddressesActivity"
            android:theme="@style/Form" />
        <activity
            android:name=".AddAddressActivity"
            android:windowSoftInputMode="stateVisible|adjustPan"
            android:theme="@style/Form" />
        <activity
            android:name=".DeliveryActivity"
            android:theme="@style/Home" />
        <activity
            android:name=".OrderDetailsActivity"
            android:theme="@style/Home" />
        <activity
            android:name=".ProductDetailActivity"
            android:theme="@style/Home" />
        <activity
            android:name=".CategoryActivity"
            android:theme="@style/Home" />
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/Home" />
        <activity
            android:name=".RegisterActivity"
            android:windowSoftInputMode="stateVisible|adjustPan"
            android:theme="@style/Form"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Splash"
            android:screenOrientation="portrait"
            android:theme="@style/Home">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>