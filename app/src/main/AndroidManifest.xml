<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.reynagagroup.ryelloshopping"
    android:installLocation="preferExternal">

    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon2_round"
        android:label="@string/app_name"
        android:logo="@mipmap/icon2"
        android:roundIcon="@mipmap/icon2_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        tools:ignore="UnusedAttribute"
        android:theme="@style/AppTheme">
        <activity android:name=".Activity.NotificationActivity"
            android:theme="@style/Home"
            android:screenOrientation="portrait"
            ></activity>
        <activity android:name=".Activity.SearchActivity"
            android:theme="@style/Home"
            android:screenOrientation="portrait"
            />
        <activity
            android:name=".Activity.UpdateUserInfoActivity"
            android:theme="@style/Form"
            android:screenOrientation="portrait"
            ></activity>
        <activity
            android:name=".Activity.PaymentInfoActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Form" />
        <activity
            android:name=".Activity.PaymentActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Form"
            android:windowSoftInputMode="stateVisible|adjustPan" />
        <activity
            android:name=".Activity.ViewAllActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Home" />
        <activity
            android:name=".Activity.MyAddressesActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Form" />
        <activity
            android:name=".Activity.AddAddressActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Form"
            android:windowSoftInputMode="stateVisible|adjustPan" />
        <activity
            android:name=".Activity.DeliveryActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Home" />
        <activity
            android:name=".Activity.OrderDetailsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Home" />
        <activity
            android:name=".Activity.ProductDetailActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Home" />
        <activity
            android:name=".Activity.CategoryActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Home" />
        <activity
            android:name=".Activity.MainActivity"
            android:label="@string/title_activity_main"
            android:screenOrientation="portrait"
            android:theme="@style/Home" />
        <activity
            android:name=".Activity.RegisterActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Form"
            android:windowSoftInputMode="stateVisible|adjustPan" />
        <activity
            android:name=".Activity.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Home">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>