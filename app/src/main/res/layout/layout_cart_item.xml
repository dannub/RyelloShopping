<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:background="@color/colorAccent"
    android:layout_marginTop="16dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/nama_barang"
                android:textColor="@color/colorAccent1"
                android:textSize="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Portable Dvd Aiwa 16 /Dvd Portable z"/>
            <TextView
                android:id="@+id/discounted"
                android:layout_marginLeft="16dp"
                android:textColor="@color/colorPrimaryDark4"
                android:textSize="9dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Discount - Rp.4000/-"/>
            <TextView
                android:id="@+id/couponed"
                android:layout_marginLeft="16dp"
                android:textColor="@color/colordetail"
                android:textSize="9dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Voucher - Rp.4000/-"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="2"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView
                android:textColor="@color/colorAccent1"
                android:textSize="15dp"
                android:layout_weight="1"
                android:id="@+id/jml_barang"
                android:layout_marginBottom="8dp"
                android:textAlignment="textEnd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="x1"/>
                <TextView
                    android:textColor="@color/colorAccent1"
                    android:textSize="15dp"
                    android:layout_marginLeft="2dp"
                    android:id="@+id/satuan"
                    android:layout_marginBottom="8dp"
                    android:textAlignment="textEnd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="meter"/>
            </LinearLayout>
            <TextView
                android:textColor="@color/colorAccent1"
                android:textSize="15dp"
                android:id="@+id/hrg_barang"
                android:textAlignment="textEnd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rp.870000/-"/>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>